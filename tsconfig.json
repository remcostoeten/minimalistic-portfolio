{
  "compilerOptions": {
    "allowJs": true, // Allow JavaScript files to be compiled.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "strict": false, // Disable all strict type-checking options.
    "forceConsistentCasingInFileNames": false, // Do not enforce consistent casing in file names.
    "noEmit": true, // Do not emit outputs.
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports.
    "downlevelIteration": false, // Provide full support for iterables in 'for-of', spread, and destructuring when targeting 'ES5' or 'ES3'.
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "noImplicitAny": false, // Raise error on expressions and declarations with an implied 'any' type.
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      "@/*": [
        "./*"
      ],
      "@c/*": [
        "./components/*"
      ],
      "@ui/*": [
        "./components/ui/*"
      ],
      "@s/*": [
        "./styles/*"
      ],
      "@sm/*": [
        "./styles/module/*"
      ]
    },
    "strictNullChecks": false, // Enable strict null checks.
    "noImplicitReturns": false, // Report error when not all code paths in function return a value.
    "noImplicitThis": false, // Raise error on 'this' expressions with an implied 'any' type.
    "noUnusedLocals": false, // Report errors on unused locals.
    "noUnusedParameters": false // Report errors on unused parameters.
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/fancy-hamburger-header/header/anim.js",
    "components/core/BackgroundVariantTwo.tsx",
    "next.config.mjs",
    "app/(nocontainer)/showcase/inspiration/page.js",
    "app/(nocontainer)/showcase/(tests)/emptyy/page.jsx",
    ".contentlayer/generated",
    "contentlayer.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}